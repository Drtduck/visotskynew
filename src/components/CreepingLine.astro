---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<div class="relative w-full overflow-hidden bg-[#1c1f26] py-3 mt-6">
  <div class="animate-marquee whitespace-nowrap flex items-center gap-4">
    {Array(10).fill(null).map((_, i) => (
      <a 
        href={href}
        class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-[#4def91] transition-colors"
      >
        <span>{text}</span>
        <i class="fas fa-star text-[#4def91] text-xs"></i>
      </a>
    ))}
  </div>
</div>

<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .animate-marquee {
    animation: marquee 20s linear infinite;
  }
</style>