---
interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
  image?: string;
}

const { title, description, date, slug, image } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('ru-RU', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-[#1c1f26] rounded-lg overflow-hidden group hover:transform hover:scale-[1.02] transition-all">
  <a href={`/blog/${slug}`} class="block">
    {image && (
      <div class="relative h-48 overflow-hidden">
        <img 
          src={image} 
          alt={title}
          class="w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-300"
        />
      </div>
    )}
    <div class="p-6">
      <time datetime={date} class="text-sm text-gray-400">{formattedDate}</time>
      <h3 class="text-xl font-semibold mt-2 mb-3 group-hover:text-[#4def91] transition-colors">{title}</h3>
      <p class="text-gray-300">{description}</p>
    </div>
  </a>
</article>