---
import TalkButton from './ui/TalkButton.astro';

const navigationLinks = [
  { href: "/", text: "Главная", icon: "house-user" },
  { href: "/about", text: "Обо мне", icon: "user" },
  { href: "/blog", text: "Блог", icon: "pen-fancy" }
];

const socialLinks = [
  { href: "https://t.me/asvpsy", icon: "telegram", label: "Telegram" },
  { href: "#", icon: "twitter", label: "Twitter" },
  { href: "#", icon: "medium", label: "Medium" }
];
---

<aside class="w-64 h-screen bg-[#1c1f26] fixed left-0 top-0 flex flex-col p-6">
  <div class="flex items-center gap-3 mb-8">
    <img src="/images/profile.jpg" alt="Андрей Высоцкий" class="w-8 h-8 rounded-full object-cover">
    <span class="font-normal tracking-wide">Андрей Высоцкий</span>
  </div>

  <nav class="flex-1">
    <ul class="space-y-2">
      {navigationLinks.map(({ href, text, icon }) => (
        <li>
          <a
            href={href}
            class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class={`fas fa-${icon} w-5 opacity-60`}></i>
            <span class="font-light">{text}</span>
          </a>
        </li>
      ))}
    </ul>

    <div class="mt-8">
      <h3 class="text-sm font-normal text-gray-400 mb-4 tracking-wide">Социальные сети</h3>
      <ul class="space-y-2">
        {socialLinks.map(({ href, icon, label }) => (
          <li>
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-white/10 transition-colors"
            >
              <i class={`fab fa-${icon} w-5 opacity-60`}></i>
              <span class="font-light">{label}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>

  <TalkButton href="https://t.me/asvpsy" />
</aside>