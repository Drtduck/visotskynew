---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="bg-[#1c1f26] rounded-2xl p-8 mb-16">
  <div class="prose prose-invert max-w-none">
    {content.split('\n\n').map(paragraph => (
      <p class="mb-6 leading-relaxed text-gray-300 last:mb-0">{paragraph}</p>
    ))}
  </div>
</div>