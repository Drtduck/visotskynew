---
interface Props {
  name: string;
  telegram: string;
  photo: string;
}

const { name, telegram, photo } = Astro.props;
---

<div class="grid grid-cols-2 gap-8 mb-16">
  <div class="bg-[#1c1f26] rounded-2xl p-8">
    <div class="space-y-4">
      <div>
        <p class="text-sm text-gray-400 mb-1">Имя</p>
        <p class="text-lg">{name}</p>
      </div>
      <div>
        <p class="text-sm text-gray-400 mb-1">Telegram</p>
        <a 
          href={telegram}
          target="_blank"
          rel="noopener noreferrer"
          class="text-lg text-[#4def91] hover:opacity-80 transition-colors flex items-center gap-2"
        >
          <i class="fab fa-telegram"></i>
          <span>@asvpsy</span>
        </a>
      </div>
    </div>
  </div>
  <div class="bg-[#1c1f26] rounded-2xl overflow-hidden">
    <img 
      src={photo} 
      alt={name}
      class="w-full h-full object-cover"
    />
  </div>
</div>