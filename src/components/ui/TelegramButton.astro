---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    "inline-flex items-center gap-2 px-6 py-3 bg-[#1c1f26] hover:bg-[#2a2f3a] transition-colors rounded-lg text-[#4def91]",
    className
  ]}
>
  <i class="fab fa-telegram"></i>
  <span>Перейти в Telegram</span>
</a>
